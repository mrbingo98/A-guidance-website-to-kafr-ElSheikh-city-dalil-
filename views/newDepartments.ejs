<%- include('partials/header'); -%>
    <style>
        .login-box {
            top: 20%;
        }
        
        .user-box textarea {
            width: 100%;
            resize: none;
            height: 200px;
            text-align: right;
            margin-bottom: 1em;
        }
    </style>
    <div class="container green">
        <div class="login-box">
            <form action="/colleges/<%= id %>/departments" method="POST">
                <h3>Add Departments</h3>
                <div class="user-box">
                    <input class="form-control" type="text" id="deptName" name="name" required>
                    <label for="deptName">Name</label>
                </div>
                <div class="user-box">
                    <textarea class="Details" cols="30" rows="10" name="details" required placeholder="Write brief Details about department here..."></textarea>
                </div>
                <button class="submit" type="submit">Add</button>
            </form>
        </div>
    </div>

    <%- include('partials/footer') -%>