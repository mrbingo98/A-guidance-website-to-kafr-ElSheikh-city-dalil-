<%- include('partials/header'); -%>

    <div class="container green">
        <a href="/restaurants/new">Add New Restaurant</a>
        <div class="album py-5">
            <div class="container">
                <div class="row">
                    <% rest.forEach(function (restaurant) { %>
                        <div class="col-md-4 sm-6 card-custom">
                            <div class="card sm-6 mb-4 box-shadow card-custom">
                                <img src="<%= restaurant.image %>" class="card-img-top" alt="<%= restaurant[" name "] %> Pic">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= restaurant["name"] %>
                                            <a href="/restaurants/<%= restaurant._id %> " class="btn btn-sm btn-outline-secondary pull-right" role="button" id="viewButton">View</a>
                                    </h5>
                                    <p class="card-text pull-right">
                                        <%= restaurant["phone"] %>
                                    </p>
                                    <%if(restaurant["openTime"] = restaurant["closeTime"]){%>
                                        <p class="card-text">Open from
                                            <%= restaurant["openTime"] %> To
                                                <%= restaurant["closeTime"] %>
                                        </p>
                                        <%}else{%>
                                            <p class="card-text">Open all day</p>
                                            <%}%>
                                </div>
                            </div>
                        </div>

                        <% }) %>
                </div>
            </div>
        </div>
    </div>
